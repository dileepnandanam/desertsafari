.page
  %h3.white= @catagory.name
  .introduction
    = raw @catagory.description

  .items
    - @plans.each do |p|
      .item.col-lg-4.col-md-6.col-12.pull-left
        .item-inner
          .item-image{style: "background-image: url(#{p.image.url(:medium)})"}
          .item-content
            %h3.item-heading
              = p.name
            .price
              = p.price
            .short-description
              = p.description
            .call
              = link_to 'Call us', "tel:#{setting('contact_number')}", class: 'btn btn-primary'
    .clearfix
  - if @plans.length == 0
    .call-us-container.col-lg-12.col-md-12.col-12
      = link_to "tel:#{setting('contact_number')}" do
        .call-us.col-lg-12.col-md-12.col-12
          = "Call us #{setting('contact_number')}"
  .photos
    - @catagory.photos.each do |p|
      .photo-container.col-lg-4.col-md-6.col-12.pull-left
        .thumbnail{   style: "background-image: url(#{image_path(p.image(:medium))})"   }
    .clearfix